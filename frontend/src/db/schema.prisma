datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  ADMIN
  EDITOR
  VIEWER
}

model Vuespace {
  id        String     @id @default(uuid())
  name      String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt @default(now())
  author    User       @relation("UserVuespaces",fields: [authorId], references: [id])
  authorId  String
  members   Member[]
}

model User {
  id               String      @id @default(uuid())
  name             String
  email            String      @unique
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt @default(now())
  memberships Member[]
  vuespaces   Vuespace[] @relation("UserVuespaces")

}

model Member {
  id        String   @id @default(uuid())
  user    User      @relation(fields: [userId], references: [id])
  userId  String
  vuespace  Vuespace @relation(fields: [vuespaceId], references: [id])
  vuespaceId  String
  role      Role     @default(VIEWER)

  @@unique([userId, vuespaceId])
}